  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #343946;
  padding-bottom: 30rpx;
}
.list_one{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 50rpx;
}
navigator{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.list_three{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.list_two{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
